<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ajfqo.spring.ex.jsp.repository.UserRepository">

	<insert id="insertUser" parameterType="map">
		
		INSERT INTO 
			`new_user`
		(
			`name`
			, `yyyymmdd`
			, `email`
		)
		VALUE 
		(
			#{name}
			, #{birthday}
			, #{email}
		)
		
	</insert>
	
	<insert id="insertUserByObject" 
	parameterType="com.ajfqo.spring.ex.jsp.domain.User"
	useGeneratedKeys = "true" keyProperty="id">
		INSERT INTO 
			`new_user`
		(
			`name`
			, `yyyymmdd`
			, `email`
		)
		VALUE 
		(
			#{name}
			, #{yyyymmdd}
			, #{email}
		)
	
	</insert>
	
	<select id="selectLastUser"
	resultType="com.ajfqo.spring.ex.jsp.domain.User">
		
		SELECT 
			 `id`
			,`name`	
			,`yyyymmdd`
			,`email`
			,`info`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_user`
		ORDER BY 
			`id` DESC
		LIMIT
			1
	</select>
	
	<select id="selectUserList"
	resultType="com.ajfqo.spring.ex.jsp.domain.User">
		
		SELECT 
			 `id`
			,`name`	
			,`yyyymmdd`
			,`email`
			,`info`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_user`
		ORDER BY 
			`id` DESC
	</select>


</mapper>



